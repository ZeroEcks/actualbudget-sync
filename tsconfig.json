{
  "compilerOptions": {
    "outDir": "build/esm",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "plugins": [{ "name": "@effect/language-service" }],
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
